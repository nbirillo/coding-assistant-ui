<idea-plugin>
    <id>org.jetbrains.research.ml.coding.assistant.ui</id>
    <name>Coding Assistant</name>
    <vendor>JetBrains Research</vendor>


    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="org.jetbrains.research.ml.codingAssistant.InitActivity"/>
        <toolWindow id="codingassistant" anchor="right" factoryClass="org.jetbrains.research.ml.codingAssistant.ui.PluginToolWindowFactory"/>
        <errorHandler implementation="org.jetbrains.research.ml.codingAssistant.reporting.GitHubErrorReporter"/>
        <writingAccessProvider implementation="org.jetbrains.research.ml.codingAssistant.tracking.PluginAccessProvider"/>
    </extensions>

</idea-plugin>