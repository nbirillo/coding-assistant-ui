<idea-plugin>
    <id>org.jetbrains.research.ml.coding.assistant.ui</id>
    <name>Coding Assistant</name>
    <vendor>JetBrains Research</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService
                serviceInterface="org.jetbrains.research.ml.coding.assistant.solutionSpace.utils.psiCreator.PsiCreator"
                serviceImplementation="org.jetbrains.research.ml.codingAssistant.tracking.TaskTrackerPsiCreator"
        />
        <postStartupActivity implementation="org.jetbrains.research.ml.codingAssistant.InitActivity"/>
        <toolWindow id="Coding Assistant" anchor="right" factoryClass="org.jetbrains.research.ml.codingAssistant.ui.PluginToolWindowFactory"/>
        <errorHandler implementation="org.jetbrains.research.ml.codingAssistant.reporting.GitHubErrorReporter"/>
        <writingAccessProvider implementation="org.jetbrains.research.ml.codingAssistant.tracking.PluginAccessProvider"/>
    </extensions>
    <actions>
        <action id="org.jetbrains.research.ml.codingAssistant.ui.NewSessionAction"
                class="org.jetbrains.research.ml.codingAssistant.ui.NewSessionAction" text="Coding Assistant: New Session"
                description="Starts new session of Coding Assistant plugin">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>